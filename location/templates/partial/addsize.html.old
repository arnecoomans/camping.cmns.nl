{% load i18n %}
<div class="row add_autocomplete add{{ value|default:attribute }}">
  <div class="col-3 title-col"></div>
  <div class="col-6 tag">
    <select id="addsize" name="size" class="autocomplete form-select" data-source="{% url 'location:getOptionsFor' 'size' location.slug %}">
    </select>
  </div>
  <div class="col-3">
    <button for="add{{ attribute }}" class="btn btn-primary submit-value" data-url="{% url 'location:ToggleAttributeWithSlug' 'location' location.slug value|default:attribute %}">{% translate 'set'|capfirst %}</button>
  </div>
</div>
